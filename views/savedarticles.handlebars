<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-3">News Scraper</h1>
    <p class="lead">This area will explain how to use the site and have a graphic.</p>
  </div>
</div>
<main>

            <div class="articles-wrapper container">
    <div class="articles row">
        <div class="col-lg-10 col-lg-offset-1 col-sm-10 col-sm-offset-1 col-xs-12">
            <h2 class="savedHeader">Your saved articles</h2>
    {{#if savedArticles}}
            <main>
    <div class="row">
      {{#each savedArticles}}
        <div class="col-sm-6 box">
  <div class = "card-deck">
  <div class="card">
  <div class="card-block" id ="results">
    <h3 class="card-title">{{title}}</h3>
    <p class="card-text">{{summary}}</p>
    <p class = "card-text"><a href="{{link}}">Read The Full Article Here</a>
        <br></br>
           <form class="create-update-form" action="/articles/{{this._id}}" method="POST">
                <input placeholder="Comment" data-id="{{this._id}}" id="notes" type="text" name="body"></input>
                
                <div class="btn-group-md" role="group" aria-label="...">
                  <button type="submit" data-id="{{this._id}}" action="/articles/{{this._id}}" method="POST" id="savenote" class="btn btn-success">Add Note</button>
                  <button type="submit" data-id="{{this.note}}" action="/delete/{{this.note}}?method=delete" method="DELETE"id="deleteNote" class="btn btn-danger">Delete Note</button>
                </div>
              </form>
          </ul>
          <h4 class="center"> Notes </h4>
          <div id="box"> 
            <h5>{{this.note.body}}</h5>
          </div>  
        </div>
    

      </div>
</div>
</div>
      {{/each}} 
            {{else}}
            
                <p>No articles saved! Try <a href="/scrape">scraping for some</a>, then click "Save".</p>
            {{/if}}
        </div>
    </div><!--/end articles row-->
</div><!-- /end main container-->

